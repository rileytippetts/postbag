<% if @notice %>
  <div class="alert alert-danger"><%= @notice %></div>
<% end %>
<form role="form" action="/notebooks/<%= params[:notebook_id] %>" method='post'>
  <input type='hidden' name='_method' value='put'>
  <div class="form-group">
    <label for="notebook-name">Notebook Name:</label>
    <input type="text" name='notebook_name' class="form-control" id="notebook-name" placeholder="<%= @notebook.name %>">
  </div>
  <button type="submit" class="btn btn-default">Update</button>
</form>
